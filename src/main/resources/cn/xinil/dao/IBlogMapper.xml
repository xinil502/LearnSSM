<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.xinil.dao.IBlogMapper">   <!--namespace必须为接口的全类名-->

    <insert id="addBlog" parameterType="blog">
        INSERT INTO webtest.blog(id, title, author, create_time, views)
        VALUES(#{id}, #{title}, #{author}, #{createTime}, #{views})
    </insert>

    <select id="findBlogUseIf" resultType="blog">
        SELECT *
        FROM webtest.blog
        WHERE 1 = 1
        <if test="author != null">
         AND author = #{author}
        </if>
        <if test="title != null">
         AND title = #{title}
        </if>
    </select>

    <select id="findBlogUseChoose" resultType="blog">
        SELECT *
        FROM webtest.blog
        <where>
            <choose>
                <when test="author != null">
                    author = #{author}
                </when>
                <when test="title != null">
                    title = #{title}
                </when>
            </choose>
        </where>
    </select>

    <update id="updateBlogUseSet">
        UPDATE webtest.blog
        <set>
            <if test="title != null">
                title = #{title},
            </if>
            <if test="views != null">
                views = #{views}
            </if>
        </set>
        WHERE id = #{id}
    </update>
</mapper>