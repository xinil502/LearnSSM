<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.xinil.dao.IUserMapper">   <!--namespace必须为接口的全类名-->

    <!--查找所有用户-->
    <select id="findAll" resultType="cn.xinil.domain.User">   <!--id必须为namespace接口的方法名-->
        SELECT * FROM webtest.user
    </select>

    <!--根据Id查找单个用户-->
    <select id="findById" resultType="cn.xinil.domain.User">
        SELECT * FROM webtest.user WHERE id = #{id}
    </select>

    <select id="findByUClass" parameterType="int" resultType="cn.xinil.domain.User">
        SELECT * FROM webtest.user WHERE uclass = #{uclass}
    </select>

    <insert id="addUser" useGeneratedKeys="true" keyProperty="id" parameterType="cn.xinil.domain.User">
        INSERT INTO webtest.user(uid, uname, uage, ugender, uaddress, uclass)
        VALUES(#{uid}, #{uname}, #{uage}, #{ugender}, #{uaddress}, #{uclass})
    </insert>

    <update id="updateUser" parameterType="cn.xinil.domain.User">
        UPDATE webtest.user SET uid=#{uid},uname=#{uname},uage=#{uage},
                                ugender=#{ugender},uaddress=#{uaddress},
                                uclass=#{uclass} WHERE id=#{id}
    </update>

    <delete id="deleteUser" parameterType="int">
        DELETE FROM webtest.user WHERE id = #{id}
    </delete>

    <select id="findUserLike" parameterType="java.lang.String" resultType="cn.xinil.domain.User">
        SELECT * FROM webtest.user WHERE uname LIKE #{value}
    </select>
</mapper>